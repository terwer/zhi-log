{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "loglevel": ["node_modules/loglevel"]
    },
    "types": [],
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts"]
}
