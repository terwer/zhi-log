{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "types": [],
    "lib": ["ESNext"],
//    "outDir": "lib",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"]
}
